<!DOCTYPE html>
<html lang="en">
<head>
    <title>Second projet de Said</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">    <title>Said Project</title>
</head>
<body>
    <%- include('partials/header') %>
    <div class="container mt-5">
        <div class="row">
          <h3>Editeurs</h3>
      <% if (publishers.length > 0) { %>
      <table class="table">
          <thead>
              <tr>
                  <th>ID</th>
                  <th>Nom</th>
                  <th>Date de cr√©ation</th>
              </tr>
          </thead>
          <tbody>
              <% publishers.map( publisher => { %>
                  <tr>
                      <th scope="row"><%= publisher.id %></th>
                      <td><%= publisher.name %></td>
                      <td><%= publisher.creationDate %></td>
                      <td>
                        <a href="/publisher/<%=publisher.id%>">
                            <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="#162E32" class="bi bi-info-square-fill" viewBox="0 0 16 16">
                                <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm8.93 4.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM8 5.5a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
                            </svg>
                        </a>
                    </td>
                  </tr>
              <% }) %>
          </tbody>
        </table>
      <% } else { %>
      <p>Aucun auteur</p>
      <% } %>

      <div class="mt-4 text-center m-auto addNew" style="border : solid #162E32 2px; padding: 0.8rem; width: auto">
          <a href="">
            <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="#162E32" class="bi bi-bookshelf" viewBox="0 0 16 16">
                <path d="M2.5 0a.5.5 0 0 1 .5.5V2h10V.5a.5.5 0 0 1 1 0v15a.5.5 0 0 1-1 0V15H3v.5a.5.5 0 0 1-1 0V.5a.5.5 0 0 1 .5-.5zM3 14h10v-3H3v3zm0-4h10V7H3v3zm0-4h10V3H3v3z"/>
            </svg>
          </a>
        </div>
        <div class="container formulaire mb-5 d-none">
            <form action="/publisher" method="post">
                <div class="mb-3" style="width : 50%; margin : auto">
                    <label for="publisher name" class="form-label">Nom de l'editeur</label>
                    <input type="text" name="name" class="form-control">
                </div>
                <div class="text-center submitNew"><button type="submit" value="Submit" class="btn" style="background-color: #162E32; color: white;">Enregistrer</button>
                </div>
            </form>
        </div>
</body>
<script src="/javascripts/script.js"></script>
</html>